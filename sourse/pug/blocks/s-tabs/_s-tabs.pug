mixin s-tabs()
	// start s-tabs
	+b.SECTION.s-tabs.section&attributes(attributes)
		+e.caption
			+e.btn.active
				span Дисбиоз

			+e.btn
				span Прием антибиотиков 
			+e.btn
				span Психологические проблемы
		.section-block
			+e.content.text-center.active
				h2 Кишечная микробиота может воздействовать на&nbsp;головной мозг
				img(src="img/tab-1.jpg", alt="")
			
			+e.content.text-center
